# Workly Frontend Environment Variables
# Vercel + Supabase 아키텍처용 설정

# =============================================================================
# 개발 모드 설정
# =============================================================================
NEXT_PUBLIC_DEV_MODE=false
NODE_ENV=development

# =============================================================================
# Supabase 설정 (필수)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# 기존 백엔드 설정 (마이그레이션 완료 후 제거 예정)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# =============================================================================
# NextAuth 설정 (Supabase Auth로 마이그레이션 후 제거 예정)
# =============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# 애플리케이션 설정
# =============================================================================
NEXT_PUBLIC_APP_NAME="Workly"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SUPPORT_EMAIL=support@workly.com

# =============================================================================
# 기능 플래그
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_REALTIME_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOADS=true
NEXT_PUBLIC_ENABLE_GUEST_ACCESS=false

# =============================================================================
# 성능 및 제한 설정
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_MAX_FILES_PER_UPLOAD=5
NEXT_PUBLIC_REALTIME_MAX_CONNECTIONS=100
NEXT_PUBLIC_TASK_LIST_PAGE_SIZE=50

# =============================================================================
# UI/UX 설정
# =============================================================================
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=ko
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Seoul
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# 보안 설정
# =============================================================================
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://workly.vercel.app

# =============================================================================
# 개발자 도구
# =============================================================================
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info
# 데이터베이스 설정
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=workly
DATABASE_USER=workly
DATABASE_PASSWORD=workly123
DATABASE_URL=postgresql://workly:workly123@localhost:5432/workly

# Redis 설정 (Socket.io Adapter)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# 파일 스토리지 설정
STORAGE_TYPE=local # local | s3
UPLOAD_DIR=./uploads

# AWS S3 설정 (STORAGE_TYPE=s3일 때)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=workly-files

# 프론트엔드 설정
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=워클리
NEXT_PUBLIC_APP_VERSION=1.0.0

# 이메일 설정 (향후 확장용)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 보안 설정
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# 로깅 설정
LOG_LEVEL=debug # error | warn | info | debug
LOG_DIR=./logs

# 개발 환경 설정
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# MinIO 설정 (로컬 개발용)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=workly-dev